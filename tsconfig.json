{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "target": "es6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "module": "es2020",
    "jsx": "react-jsx",
    "declaration": true
  },
  "include": ["index.ts", "config.ts", "components/*.ts", "components/*.tsx"],
  "exclude": ["node_modules", ".next", "public", "dist"]
}
